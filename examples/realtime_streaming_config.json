{
  "streaming": {
    "kafka": {
      "bootstrap_servers": ["localhost:9092", "localhost:9093"],
      "group_id": "edge-compute-streaming",
      "topics": ["sensor-data", "vibration-data", "equipment-status"],
      "enable_auto_commit": true,
      "session_timeout_ms": 30000,
      "heartbeat_interval_ms": 3000,
      "max_poll_records": 1000,
      "auto_commit_interval_ms": 5000
    },
    "processing": {
      "batch_size": 100,
      "processing_timeout_ms": 5000,
      "max_concurrent_processes": 4,
      "buffer_size": 10000,
      "backpressure_threshold": 0.8,
      "plugin_chain": [
        {
          "name": "vibrate31",
          "version": "1.0.0",
          "order": 0,
          "resource_requirements": {
            "cpu_cores": 1.0,
            "memory_mb": 256,
            "disk_mb": 100,
            "network_mbps": 10
          },
          "timeout_ms": 2000,
          "enable_caching": true,
          "cache_ttl_seconds": 300
        },
        {
          "name": "anomaly_detector",
          "version": "1.0.0",
          "order": 1,
          "resource_requirements": {
            "cpu_cores": 0.5,
            "memory_mb": 128,
            "disk_mb": 50,
            "network_mbps": 5
          },
          "timeout_ms": 1000,
          "enable_caching": false,
          "cache_ttl_seconds": 0
        },
        {
          "name": "predictive_analyzer",
          "version": "1.0.0",
          "order": 2,
          "resource_requirements": {
            "cpu_cores": 0.8,
            "memory_mb": 200,
            "disk_mb": 75,
            "network_mbps": 8
          },
          "timeout_ms": 3000,
          "enable_caching": true,
          "cache_ttl_seconds": 600
        },
        {
          "name": "alert_generator",
          "version": "1.0.0",
          "order": 3,
          "resource_requirements": {
            "cpu_cores": 0.2,
            "memory_mb": 64,
            "disk_mb": 25,
            "network_mbps": 2
          },
          "timeout_ms": 500,
          "enable_caching": false,
          "cache_ttl_seconds": 0
        }
      ]
    },
    "resources": {
      "cpu_cores_limit": 3.0,
      "memory_limit_mb": 4096,
      "disk_cache_size_mb": 1024,
      "network_bandwidth_mbps": 100,
      "enable_memory_mapping": true,
      "enable_compression": true
    },
    "monitoring": {
      "enable_detailed_metrics": true,
      "metrics_interval_ms": 1000,
      "enable_health_checks": true,
      "health_check_interval_ms": 5000,
      "enable_performance_profiling": false,
      "metrics_retention_hours": 24,
      "enable_alerts": true,
      "alert_config": {
        "cpu_threshold": 0.8,
        "memory_threshold": 0.8,
        "error_rate_threshold": 0.05,
        "queue_size_threshold": 1000,
        "alert_cooldown_seconds": 300
      }
    }
  },
  "high_availability": {
    "enable_failure_detection": true,
    "heartbeat_interval_seconds": 30,
    "failure_detection_timeout_seconds": 60,
    "enable_auto_failover": true,
    "failover_timeout_seconds": 300,
    "load_balancing_strategy": "adaptive",
    "health_check_config": {
      "interval_seconds": 30,
      "timeout_seconds": 10,
      "max_failures": 3,
      "recovery_interval_seconds": 60
    }
  },
  "edge_optimization": {
    "memory_optimization": {
      "enable_memory_pool": true,
      "memory_pool_size_mb": 512,
      "object_pool_size": 1000,
      "enable_memory_mapped_files": true,
      "memory_mapped_file_size_mb": 256,
      "gc_threshold_mb": 1024
    },
    "disk_optimization": {
      "enable_disk_cache": true,
      "cache_directory": "/tmp/edge_cache",
      "cache_size_mb": 1024,
      "enable_async_io": true,
      "io_thread_pool_size": 4,
      "enable_read_ahead": true,
      "read_ahead_size_kb": 64
    },
    "cpu_optimization": {
      "enable_cpu_affinity": true,
      "cpu_cores": [0, 1, 2, 3],
      "thread_pool_size": 4,
      "enable_work_stealing": true,
      "enable_priority_queue": true
    },
    "cache_optimization": {
      "enable_multi_level_cache": true,
      "l1_cache_size": 1000,
      "l2_cache_size": 10000,
      "cache_ttl_seconds": 300,
      "enable_cache_compression": true
    }
  },
  "deployment": {
    "environment": "edge",
    "node_id": "edge-node-001",
    "cluster_name": "industrial-edge-cluster",
    "data_center": "factory-floor-1",
    "service_discovery": {
      "enabled": true,
      "service_name": "edge-compute-streaming",
      "health_check_path": "/health",
      "tags": ["streaming", "vibration-analysis", "edge-compute"]
    },
    "networking": {
      "listen_address": "0.0.0.0:8080",
      "advertise_address": "edge-node-001:8080",
      "enable_tls": false,
      "enable_metrics_endpoint": true,
      "cors_enabled": true
    },
    "storage": {
      "local_cache_enabled": true,
      "persistent_storage_enabled": false,
      "cache_cleanup_interval_seconds": 3600,
      "max_cache_age_seconds": 86400
    },
    "logging": {
      "level": "INFO",
      "format": "json",
      "enable_file_logging": true,
      "log_directory": "/var/log/edge-compute",
      "max_file_size_mb": 100,
      "max_files": 10,
      "enable_remote_logging": false
    }
  },
  "security": {
    "authentication": {
      "enabled": false,
      "method": "none",
      "token_validation_enabled": false
    },
    "authorization": {
      "enabled": false,
      "rbac_enabled": false
    },
    "encryption": {
      "data_at_rest_enabled": false,
      "data_in_transit_enabled": false,
      "certificate_path": "",
      "private_key_path": ""
    },
    "network_security": {
      "enable_firewall": true,
      "allowed_ports": [8080, 9092, 9093],
      "rate_limiting_enabled": true,
      "max_requests_per_minute": 1000
    }
  },
  "maintenance": {
    "auto_restart_enabled": true,
    "restart_schedule": "02:00",
    "cleanup_schedule": "03:00",
    "backup_enabled": false,
    "backup_schedule": "04:00",
    "health_check_before_restart": true,
    "graceful_shutdown_timeout_seconds": 30
  }
}
